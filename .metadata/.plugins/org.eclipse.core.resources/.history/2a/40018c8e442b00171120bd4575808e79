
import java.util.Scanner;

public class MidEx1 {
	public static void main(String[] args) {
		Scanner std1 = new Scanner(System.in);
		Scanner std2 = new Scanner(System.in);
		Scanner std3 = new Scanner(System.in);

		System.out.print("시작값 입력: ");
		int first = std1.nextInt();
		System.out.print("끝 값 입력: ");
		int last = std2.nextInt();
		System.out.print("증가 값 입력: ");
		int plus = std3.nextInt();

		int i, sum=0;
		
		for(i=first;i<=last;i=i+plus){
			sum = sum+i;
		}
		
		System.out.print(first + "에서 " + last + "까지 " + plus + "씩 증가한 값의 합: " + sum);

	}
}
